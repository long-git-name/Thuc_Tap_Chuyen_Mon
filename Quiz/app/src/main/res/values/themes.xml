<?xml version="1.0"?>
<resources xmlns:tools="http://schemas.android.com/tools">
        <!-- Base application theme. -->
<style parent="Theme.MaterialComponents.DayNight.NoActionBar" name="Theme.Quiz">
        <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
</style>
    
<style parent="@android:style/Theme.Dialog" name="cust_dialog">
    <item name="android:windowTitleStyle">@style/dialog_title_style</item>
</style>
    
<style parent="android:Widget.TextView" name="dialog_title_style">
    <item name="android:background">#512da8</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:layout_margin">3dp</item>
    <item name="android:textSize">20sp</item>
</style>
</resources>
